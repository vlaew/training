<%- if controller_name != 'sessions' %>
  <%= link_to 'Log in', new_user_session_path(resource_name), class: 'btn-default btn' %><br />
<% end -%>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to 'Sign up as a Guest', sign_up_registrations_guests_path, class: 'btn-default btn' %><br />
  <%= link_to 'Sign up as a Seller', sign_up_registrations_sellers_path, class: 'btn-default btn' %><br />
  <%= link_to 'Sign up as an Admin', sign_up_registrations_admins_path, class: 'btn-default btn' %><br />
<% end -%>
