<%- if controller_name != 'sessions' %>
  <%= link_to 'Log in', new_user_session_path(resource_name), class: 'btn-default btn' %><br />
<% end -%>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to 'Sign up as a Guest', new_guest_registration_path, class: 'btn-default btn' %><br />
  <%= link_to 'Sign up as a Seller', new_seller_registration_path, class: 'btn-default btn' %><br />
  <%= link_to 'Sign up as an Admin', new_admin_registration_path, class: 'btn-default btn' %><br />
<% end -%>
